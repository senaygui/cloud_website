<!DOCTYPE html>
<html>
  <head>
    <title>Portal System | <%= yield(:title)%></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />
    <style>
      .custom-flash {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2000;
        min-width: 300px;
        max-width: 90vw;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        opacity: 0.98;
      }
    </style>
  </head>

  

  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible fade show custom-flash" role="alert">
      <%= flash[:notice] %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="this.parentElement.style.display='none';">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert alert-danger alert-dismissible fade show custom-flash" role="alert">
      <%= flash[:alert] %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="this.parentElement.style.display='none';">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <%if !student_signed_in?%>
    <body class="hold-transition control-sidebar-slide-open sidebar-collapse">
      <div class="wrapper">
        <%= render 'layouts/registration_navbar' unless @disable_nav%> 
        <%= yield %>
      </div>
    </body>
  <%elsif student_signed_in?%>
    <%if !(params[:update_pwd] == "update_pwd")%>
    <body class="hold-transition sidebar-mini layout-fixed <%= yield(:side)%>">
    <div class="wrapper">

    <%= render 'layouts/navbar' %>
    <%= render 'layouts/sidebar' %>
    <div class="content-wrapper">
      <%= yield %>
    </div>
  </div>
    </body>
    <%else%>
      <body class="hold-transition control-sidebar-slide-open sidebar-collapse">
        <div class="wrapper">
          <div class="content-wrapper">
            <%= yield %>
          </div>
        </div>
      </body>
    <%end%>
  <%else%>
    <body>
      <%= yield %>
    </body>
    
  <%end%>
<!--   <script>
    $.widget.bridge('uibutton', $.ui.button)
  </script> -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      setTimeout(function() {
        var flash = document.querySelector('.custom-flash');
        if (flash) { flash.style.display = 'none'; }
      }, 5000); // 5 seconds
    });
  </script>
</html>
