<!-- app/views/document_requests/track_form.html.erb -->
<h1>Track Document Request</h1>

<%= form_with url: track_document_requests_path, method: :post, local: true do |form| %>
  <div class="field">
    <%= form.label :track_number, "Track Number:" %>
    <%= form.text_field :track_number %>
  </div>
  <div class="actions">
    <%= form.submit "Track" %>
  </div>
<% end %>

<%= link_to 'Back to Home', root_path %>
