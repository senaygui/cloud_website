<% provide(:title, "Class Schedules") %>
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>My Class Schedules</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Class Schedules</li>
        </ol>
      </div>
    </div>
  </div>
</section>
<div class="col-12 col-md-12">
  <div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">Class Schedules</h3>
    </div>
    <div class="card-body">
      <table id='schedulesTable' class='table table-striped table-sm'>
        <thead>
          <tr>
            <th>Course</th>
            <th>Day of Week</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Classroom</th>
            <th>Instructor</th>
          </tr>
        </thead>
        <tbody>
          <% @class_schedules.each do |schedule| %>
            <tr>
              <td><%= schedule.course.course_title %></td>
              <td><%= schedule.day_of_week %></td>
              <td><%= schedule.start_time.strftime("%H:%M") %></td>
              <td><%= schedule.end_time.strftime("%H:%M") %></td>
              <td><%= schedule.classroom %></td>
              <td><%= schedule.instructor_name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
