<h1>Exam Schedule</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Program</th>
      <th>Section</th>
      <th>Exam Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Exam Type</th>
      <th>Classroom</th>
    </tr>
  </thead>

  <tbody>
    <% @exam_schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.course.course_code %></td>
        <td><%= schedule.program.program_name %></td>
        <td><%= schedule.section.section_short_name %></td>
        <td><%= schedule.exam_date %></td>
        <td><%= schedule.start_time.strftime("%H:%M") %></td>
        <td><%= schedule.end_time.strftime("%H:%M") %></td>
        <td><%= schedule.exam_type %></td>
        <td><%= schedule.classroom %></td>
      </tr>
    <% end %>
  </tbody>
</table>
