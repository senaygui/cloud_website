<% provide(:title, "Course Offering") %>
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Course Offering</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Course Offering</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h3 class="card-title">Course Offering History</h3>
      </div>
      <div class="card-body table-responsive p-0">
        <style>
          .table {
            border-collapse: collapse;
            width: 100%;
          }
          .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
          }
          .table th {
            background-color: #f8f9fa;
            font-weight: bold;
            text-align: left;
          }
          .table-hover tbody tr:hover {
            background-color: #f1f1f1;
          }
          .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
          }
          .table-responsive {
            overflow-x: auto;
          }
        </style>
        <table class="table table-hover table-striped text-nowrap">
          <thead>
            <tr>
              <th>Course Title</th>
              <th>Course Code</th>
              <th>Program</th>
              <th>Curriculum</th>
              <th>Year</th>
              <th>Semester</th>
              <th>Credit Hour</th>
              <th>Lecture Hour</th>
              <th>Lab Hour</th>
              <th>Contact Hour</th>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.course_title %></td>
                <td><%= course.course_code %></td>
                <td><%= course.program.program_name %></td>
                <td><%= course.curriculum.curriculum_version %></td>
                <td><%= course.year %></td>
                <td><%= course.semester %></td>
                <td><%= course.credit_hour %></td>
                <td><%= course.lecture_hour %></td>
                <td><%= course.lab_hour %></td>
                <td><%= course.ects %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
