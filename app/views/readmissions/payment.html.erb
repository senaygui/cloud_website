<section class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
          <h3>Readmission Payment</h3>
        </div>
        <div class="card-body">
          <% if @college_payment.present? %>
            <div class="mb-4">
              <p><strong>Study Level:</strong> <%= @college_payment.study_level %></p>
              <p><strong>Admission Type:</strong> <%= @college_payment.admission_type %></p>
              <p><strong>Readmission Fee:</strong> <%= number_to_currency(@college_payment.readmission, unit: "ETB") %></p>
            </div>

            <%= form_for @readmission, url: payment_readmission_path(@readmission), method: :patch, html: { multipart: true } do |f| %>
              <div class="form-group">
                <%= f.label :receipt, "Upload Receipt", class: "form-label" %>
                <%= f.file_field :receipt, class: "form-control" %>
              </div>
              
              <div class="form-group text-center mt-4">
                <%= f.submit "Submit Receipt", class: "btn btn-success px-5" %>
              </div>
            <% end %>
          <% else %>
            <div class="alert alert-danger text-center">
              No payment information available for your current study level and admission type.
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
