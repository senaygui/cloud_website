<h1 class="text-center my-4">Request Makeup Exam</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with model: @makeup_exam, local: true, html: { class: "form-horizontal", multipart: true } do |f| %>
        <% if @makeup_exam.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(@makeup_exam.errors.count, "error") %> prohibited this makeup exam from being saved:</h4>
            <ul>
              <% @makeup_exam.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
        <%= f.label :course_registration_id, "Select Course" %>
        <%= f.collection_select :course_registration_id, @courses, :id, :course_title, prompt: "Select a course" %>
        </div>

        <div class="form-group">
          <%= f.label :reason, "Reason for Makeup Exam", class: "control-label" %>
          <%= f.text_area :reason, class: "form-control", rows: 5 %>
        </div>

        <div class="form-group">
          <%= f.label :attachment, "Attach File (Optional)", class: "control-label" %>
          <%= f.file_field :attachment, class: "form-control-file" %>
        </div>

        <%= f.hidden_field :year, value: current_student.year %>
        <%= f.hidden_field :semester, value: current_student.semester %>

        <div class="form-group text-center">
          <%= f.submit "Submit Request", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



