<div class="container mt-4">
  <h1 class="mb-4">Notices</h1>

  <% if admin_user_signed_in? %>
    <div class="text-right mb-3">
      <%= link_to 'Post a New Notice', new_admin_notice_path, class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="row">
    <% @notices.each do |notice| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to notice.title, notice_path(notice) %></h5>
            <p class="card-text"><%= truncate(notice.body, length: 100) %></p>
            <p class="card-text">
              <small class="text-muted">Posted by: <%= notice.posted_by %> <br> on <%= notice.created_at.strftime("%B %d, %Y") %></small>
            </p>
            <%= link_to 'Read more', notice_path(notice), class: 'btn btn-secondary btn-sm' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
