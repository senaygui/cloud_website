<% provide(:title, "Notices") %>
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Notices</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Notices</li>
        </ol>
      </div>
    </div>
  </div>
</section>


<section class="content">
  <div class="container-fluid">
    <div class="row g-4">
      <% @notices.each do |notice| %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm hover-shadow">
            <div class="card-body">
              <h5 class="card-title fw-bold mb-3">
                <%= link_to notice.title, notice_path(notice), class: 'text-decoration-none text-dark' %>
              </h5>
              <p class="card-text text-muted mb-3">
                <%= truncate(notice.body, length: 120) %>
              </p>
              <div class="d-flex justify-content-between align-items-center mt-auto">
                <div class="text-muted small">
                  <i class="fas fa-user me-1"></i>
                  <%= notice.posted_by %>
                  <br>
                  <i class="fas fa-calendar me-1"></i>
                  <%= notice.created_at.strftime("%B %d, %Y") %>
                </div>
                <%= link_to notice_path(notice), class: 'btn btn-outline-primary btn-sm' do %>
                  Read More <i class="fas fa-arrow-right ms-1"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .hover-shadow {
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    
    .hover-shadow:hover {
      transform: translateY(-5px);
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .card {
      border: none;
      border-radius: 10px;
    }
    
    .card-title {
      font-size: 1.25rem;
      line-height: 1.4;
    }
    
    .btn-outline-primary {
      border-width: 2px;
    }
  </style>
<% end %>
