<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h1 class="card-title"><%= @notice.title %></h1>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @notice.body %></p>
    </div>
    <div class="card-footer text-muted">
      <small>Posted by: <%= @notice.posted_by %> <br> on <%= @notice.created_at.strftime("%B %d, %Y") %></small>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to 'Back to Notices', notices_path, class: 'btn btn-secondary' %>
  </div>
</div>
